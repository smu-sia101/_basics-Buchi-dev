@model Product

<h2>Edit Product</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="UpdateProduct" asp-controller="Products">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Product Name:</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label">Type:</label>
                <input asp-for="Type" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Manufacturer" class="control-label">Manufacturer:</label>
                <input asp-for="Manufacturer" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div> 